{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
    <h4>New Post Box Details</h4>
    {{!-- <div style="margin-top:15px"></div> --}}
    <form action="/receptions/{{receptionId}}" method="POST">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">URL</span>
            <input class="form-control" value="{{url}}" aria-describedby="basic-addon1">
        </div>
        <div class="form-group">
            <label for="details">Name</label>
            <input name="name" class="form-control" value="" aria-describedby="basic-addon-name">
        </div>
        <div class="form-group">
            <div class="card">
                <div class="card-body" id="dynamicHeaderContainer">
                    <h6 class="card-title">Response Headers</h6>

                    <div class="d-flex flex-row form-group ">
                        <input type="text" placeholder="HTTP Header Name" name="header[]" class="form-control" value="">
                        <input type="text" placeholder="HTTP Header Value" name="headerVal[]" class="form-control" value="">
                        <button class="btn btn-success" type="button" onclick="addHeaderFields();"> <span class="fas fa-plus"
                                aria-hidden="true"></span> </button>
                    </div>
                </div>
            </div>

        </div>
        <div class="input-group">
            <small class="text-secondary">
                Supported Methods
                <span class="badge badge-info">GET</span>
                <span class="badge badge-success">POST</span>
                <span class="badge badge-warning">PUT</span>
                <span class="badge badge-danger">DELETE</span>
            </small>
        </div>

        <div style="margin-top:15px"></div>
        <div class="form-group">
            <label for="responseBody">Response Body</label>
            <textarea type="text" class="form-control" name="responseBody">{{responseBody}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>

    </form>
</div>

<div style="margin-top:15px"></div>
<div class="card card-body">
    {{> _sample_requests }}
</div>

<script type="text/javascript">
    var room = 1;

    function addHeaderFields(){
        room++;
        var objTo = document.getElementById('dynamicHeaderContainer');
        var divtest = document.createElement("div");
        divtest.setAttribute("class", "form-group removeclass"+room);
        divtest.innerHTML = ' <div class="d-flex flex-row "> <input type="text" placeholder="HTTP Header Name" name="header[]" class="form-control" value=""> <input type="text" placeholder="HTTP Header Value" name="headerVal[]" class="form-control" value=""> <button class="btn btn-danger" type="button" onclick="removeHeaderFields('+room+');"> <span class="fas fa-minus" aria-hidden="true"></span> </button> </div>';
        objTo.appendChild(divtest);
    }

    function removeHeaderFields(rid) {
        $('.removeclass' + rid).remove();
    }
</script>